@model IEnumerable<Sporting.Models.Team>

<div class="container mt-5">
    <div class="text-left mb-4">
        <h2>Teams List</h2>
        <div class="text-end mb-4">
            <a asp-action="CreateTeam" class="btn btn-primary">Create New Team</a>
        </div>
    </div>

    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm rounded-lg h-100">
                    <div class="card-header bg-primary text-white text-center rounded-top">
                        <h5 class="mb-0">@item.Name</h5>
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(item.Logo))
                        {
                            <img src="@item.Logo" alt="Team Logo" class="img-fluid mb-3" style="max-height: 100px;" />
                        }
                        else
                        {
                            <i class="fas fa-futbol fa-4x mb-3 text-primary"></i>
                        }

                        <div class="mt-3">
                            <a asp-action="UpdateTeam" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="DeleteTeam" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                            <a asp-action="Get" asp-route-id="@item.Id" class="btn btn-info btn-sm mt-2">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>