@model Sporting.Models.Team

<div class="container mt-4">
    <h2>Delete Team</h2>

    <h3>Are you sure you want to delete this team?</h3>
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Model.Name</dd>

                @if (!string.IsNullOrEmpty(Model.Logo))
                {
                    <dt class="col-sm-2">Logo</dt>
                    <dd class="col-sm-10">
                        <img src="@Model.Logo" alt="Team Logo" style="max-width: 200px;" />
                    </dd>
                }
            </dl>

            <form asp-action="DeleteTeam">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="GetAll" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>