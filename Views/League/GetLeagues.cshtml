@model IEnumerable<Sporting.Models.League>

<div class="container mt-5">
    <div class="text-left mb-4">
        <h2 style="font-family: 'Sakkal Majalla', sans-serif;"><img src="~/Images/lo.png" style="width:200px;height:200px;"  /> Top Five Leagues </h2>

        <div class="text-end mb-4">
            <a asp-action="CreateLeague" class="btn btn-primary">Create New League</a>
        </div>
    </div>

    

    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm rounded-lg h-100">
                    <div class="card-header bg-primary text-white text-center rounded-top">
                        <h5 class="mb-0">@item.Name</h5>
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(item.Logo))
                        {
                            <img src="@item.Logo" alt="League Logo" class="img-fluid mb-3" style="max-height: 100px;" />
                        }
                        else
                        {
                            <i class="fas fa-trophy fa-4x mb-3 text-primary"></i>
                        }

                        <div class="mt-3">
                            <a asp-action="UpdateLeague" asp-route-id="@item.Id"
                               class="btn btn-warning btn-sm me-2">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="DeleteLeague" asp-route-id="@item.Id"
                               class="btn btn-danger btn-sm me-2">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                            <a asp-action="GetTeamsByLeague" asp-route-LeagueId="@item.Id"
                               class="btn btn-info btn-sm">
                                <i class="fas fa-users"></i> Teams
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>




