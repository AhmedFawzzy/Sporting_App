@model Sporting.Models.League

<h2>Delete League</h2>

<h3>Are you sure you want to delete this league?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        @if (!string.IsNullOrEmpty(Model.Logo))
        {
            <dt class="col-sm-2">
                Logo
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.Logo" alt="League Logo" style="max-width: 200px;" />
            </dd>
        }
    </dl>

    <form asp-action="DeleteLeague">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="GetLeagues" class="btn btn-secondary">Back to List</a>
    </form>
</div>