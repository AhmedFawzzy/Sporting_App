@model Sporting.Models.League

<h2>Update League</h2>

<form asp-action="UpdateLeague" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Logo" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.Logo))
    {
        <div class="form-group">
            <label>Current Logo:</label>
            <img src="@Model.Logo" alt="Current Logo" style="max-width: 200px;" />
        </div>
    }

    <div class="form-group">
        <label asp-for="Logo" class="control-label">New Logo</label>
        <input type="file" name="logoFile" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Update" class="btn btn-primary" />
        <a asp-action="GetLeagues" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}